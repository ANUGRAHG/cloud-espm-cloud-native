{
  "welcomeFile": "/webapp/index.html",
  "authenticationMethod": "none",
  "logout": {
    "logoutEndpoint": "/do/logout"
  },
  "routes": [
    {
      "source": "^/espm-products/(.*)$",
      "target": "$1",
      "destination": "espm-products"
    },
    {
      "source": "^/espm-customers/(.*)$",
      "target": "$1",
      "csrfProtection": false,
      "destination": "espm-customers"
    },
    {
      "source": "^/espm-salesorders/(.*)$",
      "target": "$1",
      "csrfProtection": false,
      "destination": "espm-salesorder"
    },
    {
      "source": "^/(.*)$",
      "target": "$1",
      "localDir": "."
    },
	{
	  "source": "/product.svc/api",
	  "destination": "product-service",
	  "httpMethods": ["GET","PUT"]
	},
	{
	  "source": "/customer.svc/api",
	  "destination": "customer-service",
	  "httpMethods": ["GET","POST","PUT","DELETE"]
	},
	{
	  "source": "/sale.svc/api",
	  "destination": "sales-service",
	  "httpMethods": ["GET","POST"]
	}
  ]
}



